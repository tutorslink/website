# MongoDB Atlas connection string
# Get this from MongoDB Atlas dashboard after creating a cluster
# Example: mongodb+srv://username:password@cluster.mongodb.net/tutorslink?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# Server port (Railway will provide this automatically in production)
PORT=3000

# Discord webhook URL for support messages (optional)
# Get this from your Discord server settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Firebase Configuration (for client-side authentication)
# Get these from Firebase Console > Project Settings > Your Apps
# Note: These values are used in firebase-config.js on the client side
# They are safe to expose in client-side code as Firebase security rules protect your data
FIREBASE_API_KEY=YOUR_API_KEY
FIREBASE_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
FIREBASE_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
FIREBASE_APP_ID=YOUR_APP_ID
